{
  "name": "mcp-starter-template",
  "version": "1.0.0",
  "description": "A comprehensive starter template for Model Context Protocol (MCP) servers",
  "main": "dist/server.js",
  "type": "module",
  "scripts": {
    "dev": "tsx watch src/server.ts",
    "build": "tsc && tsc-alias",
    "start": "node dist/server.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src --ext .ts,.tsx",
    "lint:fix": "eslint src --ext .ts,.tsx --fix",
    "format": "prettier --write \"src/**/*.{ts,tsx,json,md}\"",
    "format:check": "prettier --check \"src/**/*.{ts,tsx,json,md}\"",
    "type-check": "tsc --noEmit",
    "clean": "rimraf dist coverage",
    "setup": "npm install && npm run build",
    "setup:yarn": "yarn install && yarn build",
    "setup:pnpm": "pnpm install && pnpm build",
    "docker:build": "docker build -t mcp-server .",
    "docker:run": "docker run -p 3000:3000 mcp-server",
    "docker:dev": "docker-compose up --build",
    "health": "curl -f http://localhost:3000/health || exit 1",
    "validate-config": "node -e \"require('./dist/utils/config.js').validateConfig()\""
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "ai",
    "llm",
    "typescript",
    "server",
    "template",
    "starter"
  ],
  "author": "Your Name <your.email@example.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/onamfc/mcp-starter-template.git"
  },
  "bugs": {
    "url": "https://github.com/onamfc/mcp-starter-template/issues"
  },
  "homepage": "https://github.com/onamfc/mcp-starter-template#readme",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.0",
    "zod": "^3.22.4",
    "winston": "^3.11.0",
    "dotenv": "^16.3.1",
    "tsc-alias": "^1.8.8"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/jest": "^29.5.8",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "eslint": "^8.54.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.1",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1",
    "tsx": "^4.6.0",
    "typescript": "^5.3.0",
    "prettier": "^3.1.0",
    "rimraf": "^5.0.5",
    "@types/winston": "^2.4.4"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "roots": ["<rootDir>/src"],
    "testMatch": ["**/__tests__/**/*.test.ts"]
  }
}
}
